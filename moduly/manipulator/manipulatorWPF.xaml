        <TextBox x:Name="joint1TextBox" Text="0" HorizontalAlignment="Left" Height="24" Margin="258,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  Width="50" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"  RenderTransformOrigin="0.513,0.361"/>
        <TextBox x:Name="joint2TextBox" Text="10" HorizontalAlignment="Left" Height="24" Margin="258,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  Width="50" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"  RenderTransformOrigin="0.513,0.361"/>
        <TextBox x:Name="joint3TextBox" Text="0" HorizontalAlignment="Left" Height="24" Margin="259,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  Width="50" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"  RenderTransformOrigin="0.513,0.361"/>
